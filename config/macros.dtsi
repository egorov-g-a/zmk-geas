/ {
    macros {
        /* Emulation modifier keys function for SHIFT key
         * https://zmk.dev/docs/keymaps/modifiers#modifier-functions
         *
         * Params:
         * 1. keycode to shift
         *
         * Example:
         * print star - '*'
         * `&m_shkey N8`
         * print capitalize a - 'A'
         * `&m_shkey A`
         */
        /omit-if-no-ref/ m_shkey: shifted_key {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = 
                <&macro_press &kp LSHFT>,
                <&macro_param_1to1>,
                <&macro_press &kp MACRO_PLACEHOLDER>,
                <&macro_pause_for_release>,
                <&macro_param_1to1>,
                <&macro_release &kp MACRO_PLACEHOLDER>,
                <&macro_release &kp LSHFT>;
        };
    };
};

#define M_EXCL  &m_shkey N1 // !
#define M_AT    &m_shkey N2 // @
#define M_HASH  &m_shkey N3 // #
#define M_DLLR  &m_shkey N4 // $
#define M_PRCNT &m_shkey N5 // %
#define M_CARET &m_shkey N6 // ^
#define M_AMPS  &m_shkey N7 // &
#define M_STAR  &m_shkey N8 // *
#define M_LPAR  &m_shkey N9 // (
#define M_RPAR  &m_shkey N0 // )

